.default-width{
    width: 100%;
    height: auto;
}
.hotel-top-img img{
    width: 100%;
    border: 0;
}
.hotel-list-block{
    font-size: 14px;
}
.hotel-list-block ul{
    background: #ffffff;
    list-style: none;
    padding: 0;
    margin: 0;
    position: relative;
}
.hotel-list-block li{
    padding-left: 0.75rem;
    width:96%;
    height: 2rem;
    border-bottom: 1px solid #e7e5e5;
}
.hotel-list-block .item-title{
    width: 90%;
    float: left;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 19px;
    font-family: "Helvetica Neue", Helvetica, sans-serif;
    line-height:2rem;
    font-weight: bold;

}
.icon-phone{
    width: 2.3rem;
    height: 2rem;
    float: left;

}
.icon-phone img{
    margin-top: 0.4rem;
    width: 1.2rem;
}
.item-phone{
    color: #999;
    line-height:2rem;
    font-size: 15px;
}
.check-in,.check-in-data{
    float: left;
    line-height: 2rem;
    font-size: 15px;
}
.check-in{
    width: 25%;
}
.check-in-data{
    width: 60%;
    text-align: right;
    color: #b31e23;

}
.item-content{
    position:relative;
}
.icon-more{
    float: right;
    width: 0.5rem;
    position: absolute;
    right: 0.5rem;
    top: 0.6rem;
}
.hotel-content-details{
    margin-top: 1rem;
    display: table;
}
.place-order-info{
    width: 100%;
    height: 2.3rem;
    border-bottom: 1px solid #ddd;
    background: #fff;
}
.place-order-info a{
    display: block;
    text-align: center;
    width: 50%;
    float: left;
    line-height: 2.3rem;
    font-size: 15px;
    color: #666;

}
.place-order-info .order-active{
    border-bottom: 2px solid #b31e23;
    color: #b31e23;
}
.room-list-item{
    background-color: #fff;
    display: table;;
    margin-bottom: 0.5rem;
}
.room-item-name{
    width: 45%;
    padding-left: 0.75rem;
    text-align: left;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}
.room-item-name,.room-item-peice,.room-item-but{
    height: 3rem;
    float: left;
    line-height: 3rem;
}
.room-item-peice,.room-item-but{
    width: 24%;
    font-size: 10px;

}
.room-item-but{
    text-align: right;
    padding-right: 0.5rem;
}
.room-item-but .order-but,.room-item-but .order-over-but{
    padding: 0.4rem 1.2rem;
    color: #fff;
    border: 0;
    border-radius: 0.3rem;
    font-size: 14px;
}
.room-item-but .order-but{
    background: #b31e23;

}
.room-item-but .order-over-but{
    background: #999;

}
.room-item-peice i{
    color: #b31e23;
    font-size: 16px;
    font-style: normal;
    font-weight: bold;
}
.room-list{
    display: block;
}
.hotel-brief-introduction{
    display: none;
}
.hotel-facilities{;
    height: 2.3rem;
    line-height: 2.3rem;
    padding-left: 0.75rem;
    border-left: 3px solid #b31e23;
}
.hotel-facilities-list{
    background-color: #fff;
    display: table
}
.hotel-facilities-list li {
    float: left;
    padding: 0.5rem 0.9rem
}
.hotel-facilities-list li span{
    margin-left: 0.3rem;
    float: left;
}
.hotel-facilities-box{
   margin-bottom: 1rem
}