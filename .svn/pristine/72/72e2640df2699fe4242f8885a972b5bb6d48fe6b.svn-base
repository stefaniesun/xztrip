				$("#dialogFormDiv_editPms").dialog("destroy");
			}
		}],onLoad:function(){
			
			xyzCombobox({
				combobox : 'hotelForm',
				url:'../ListWS/getPmsHotelList.do',
				lazy : false,
				required : true,
				onChange : function(newHotel, oldHotel){
