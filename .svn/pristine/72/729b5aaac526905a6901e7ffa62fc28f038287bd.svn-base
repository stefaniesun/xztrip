/* 日期选择css */
*{
    margin:0;
    padding:0;
}
.xyzCalendar .fullbg {
    background-color:#fff;
    left:0;
    position:absolute;
    top:0;
    z-index:99999;
    display: none;
}
.xyzCalendar .date-header{
    width: 100%;
    height:auto;
    position: fixed;
    top:0;
}
.xyzCalendar .icon-left{
    float: left;
}
.xyzCalendar .back-left{
    width: 20%;
    margin-top: 0.4rem;
	position: relative;
	z-index: 1000;
}
.xyzCalendar .header-title{
    width: 100%;
    height: 2.4rem;
    background: #b31e23;
}
.xyzCalendar .date-header .center-name h2{
    line-height: 2.3;
    font-size: 17px;
    font-weight: 100;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #fff;
    position: absolute;
    width: 100%;
    top: 0;
    left: 0;
    text-align: center;
}
.xyzCalendar .icon-back{
    width: 1.7rem;
}
.xyzCalendar .confirm{
    float: right;
    margin-right: 0.3rem;
    color: #fff;
    font-size: 15px;
}
.xyzCalendar .calendar{
    width: 100%;
    text-align: center;
    padding-top: 0.3rem;
    padding-bottom: 0.3rem;
    font-size: 13px;
    background-color: #e8e8e8;
    border-bottom: 1px solid #ccc;
}
.xyzCalendar .date-tab{
    width: 100%;
    text-align: center;
    margin-top: 30px;
    border-bottom: 1px solid #ddd;
    padding-bottom: 15px;
}
.xyzCalendar .date-tab td{
    width:14.3%;
    padding-top: 0.5rem;
    padding-bottom:0.5rem ;
    color: #b31e23;
}
