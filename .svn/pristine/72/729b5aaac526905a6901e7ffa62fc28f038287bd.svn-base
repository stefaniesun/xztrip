.xyzCalendar .date-title{
    padding-bottom: 10px;
    color: #333;
    font-size: 15px;
    font-weight: bold;
}
.xyzCalendar .date-tab .colo-grey{
    color: #ccc;
}
.xyzCalendar .date-tab .check-in{
    background-color: #b31e23;
    color: #fff;
}
.xyzCalendar .date-tab td span{
    display: block;
    font-size: 10px;
}
.xyzCalendar .date-tab .check-out{
    background-color:#dd6665 ;
    color: #fff;
}